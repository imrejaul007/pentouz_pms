# Environment
NODE_ENV=development
PORT=4000

# Database
MONGO_URI=mongodb://localhost:27017/hotel_dev

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_PRIVATE_KEY_PATH=./keys/jwtRS256.key
JWT_PUBLIC_KEY_PATH=./keys/jwtRS256.key.pub

# Stripe Configuration (Get from https://dashboard.stripe.com)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Redis
REDIS_URL=redis://localhost:6379

# Email Configuration (Gmail SMTP)
# Generate App Password: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-character-app-password
FROM_EMAIL="Your Hotel Name" <noreply@yourhotel.com>
FRONTEND_URL=http://localhost:3000

# Email Campaign Settings
EMAIL_UNSUBSCRIBE_URL=http://localhost:3000/unsubscribe
EMAIL_TRACKING_DOMAIN=http://localhost:4000
EMAIL_TEMPLATE_DIR=./src/templates/email

# Security
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional integrations
BOOKINGCOM_CLIENT_ID=your_booking_client_id
BOOKINGCOM_CLIENT_SECRET=your_booking_secret
BOOKINGCOM_API_BASE=https://api.sandbox.booking.com
BOOKINGCOM_REDIRECT_URI=http://localhost:4000/api/v1/ota/booking/callback

GOOGLE_PROJECT_ID=your-gcp-project
GOOGLE_CLOUD_RUN_SERVICE=hotel-backend
